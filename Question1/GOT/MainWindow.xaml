<Window x:Class="GOT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GOT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Loaded="Grid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="205*"/>
            <ColumnDefinition Width="567*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtImage1" HorizontalAlignment="Left" Margin="0,-45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="454" Width="792" Opacity="0.95" Grid.ColumnSpan="3"/>
        <TextBlock x:Name="txtQuote" HorizontalAlignment="Left" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="95" Width="750" Grid.Column="1" Grid.ColumnSpan="2" Foreground="Yellow" FontStyle="Italic" FontFamily="Large"/>
        <Button x:Name="btnSubmit" Content="Submit" Grid.Column="2" Margin="150,260,342,124" Click="BtnSubmit_Click"/>
        <Button x:Name="btnclear" Content="Clear" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Grid.Column="2" Margin="255,260,0,0" Click="Btnclear_Click" Height="35"/>

    </Grid>

</Window>
